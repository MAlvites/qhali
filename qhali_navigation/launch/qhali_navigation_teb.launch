<launch>
  <!-- Arguments -->
  <arg name="map_file" default="$(find qhali_navigation)/maps/map_env1.yaml"/>
  <arg name="open_rviz" default="true"/>
  <arg name="move_forward_only" default="true"/>

  <!-- Turtlebot3 -->
  <include file="$(find qhali_bringup)/launch/qhali_remote.launch"/>

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- AMCL -->
  <include file="$(find qhali_navigation)/launch/amcl.launch"/>

  <!-- move_base -->
  <include file="$(find qhali_navigation)/launch/move_base_teb.launch">
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find qhali_navigation)/rviz/qhali_navigation.rviz"/>
  </group>
</launch>

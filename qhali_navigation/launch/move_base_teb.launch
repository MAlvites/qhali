<launch>
  <!-- Arguments -->
  <arg name="cmd_vel_topic" default="/cmd_vel" />
  <arg name="odom_topic" default="odom" />
  <arg name="move_forward_only" default="true"/>
  <param name="/use_sim_time" value="true"/>
  <!-- move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS" />
    <rosparam file="$(find qhali_navigation)/param/costmap_common_params_qhali.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find qhali_navigation)/param/costmap_common_params_qhali.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find qhali_navigation)/param/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find qhali_navigation)/param/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find qhali_navigation)/param/move_base_params.yaml" command="load" />
    <rosparam file="$(find qhali_navigation)/param/teb_local_planner_params_qhali.yaml" command="load" />
    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>
    <!--<remap from = "scan" to = "scan_filtered"/>-->
    <param name="TebLocalPlannerROS/max_vel_x_backwards" value="0.0" if="$(arg move_forward_only)" />
  </node>
</launch>